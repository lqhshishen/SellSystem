    <!--</style>-->

    <style name="pop_anim">
        <item name="android:windowEnterAnimation">@anim/pop_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_buttom_out</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>
</resources>
